<mjml>
  <mj-head>
    <mj-font name="Inter" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
    <mj-attributes>
      <mj-all font-family="Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif" />
      <mj-text font-size="16px" line-height="1.6" color="#374151" />
      <mj-button font-weight="600" border-radius="8px" />
    </mj-attributes>
    <mj-style>
      .header-logo { max-width: 150px !important; }
      .welcome-title { font-size: 28px !important; font-weight: 700 !important; color: #1f2937 !important; line-height: 1.2 !important; }
      .section-title { font-size: 22px !important; font-weight: 600 !important; color: #1f2937 !important; margin-bottom: 16px !important; }
      .milestone-card { background-color: #fef3c7 !important; border-radius: 8px !important; padding: 20px !important; margin-bottom: 16px !important; border-left: 4px solid #f59e0b !important; }
      .community-card { background-color: #ede9fe !important; border-radius: 8px !important; padding: 20px !important; margin-bottom: 16px !important; border-left: 4px solid #8b5cf6 !important; }
      .footer-text { font-size: 14px !important; color: #6b7280 !important; }
    </mj-style>
  </mj-head>
  <mj-body background-color="#1565C0">
    <!-- Header -->
    <mj-section background-color="#1565C0" padding="32px 24px">
      <mj-column width="100%">
        <mj-text align="center">
          <div style="background-color: #ffffff; border-radius: 8px; padding: 12px; display: inline-block; width: 200px;">
            <!-- Gmail-optimized logo with multiple fallbacks -->
            <img 
              src="{{logoUrl}}" 
              alt="WebAbility - Making the web accessible for everyone" 
              style="width: 150px; max-width: 150px; height: auto; display: block; margin: 0 auto; border: 0; outline: none; text-decoration: none;" 
              width="150"
              border="0"
              onerror="this.onerror=null; this.src='{{fallbackLogoUrl}}'; if(this.onerror) { this.onerror=null; this.src='{{altFallbackUrl}}'; }"
            />
            <!-- Gmail-specific fallback using conditional comments -->
            <!--[if mso]>
            <img src="{{altFallbackUrl}}" alt="WebAbility Logo" style="width: 150px; height: 40px; display: block; margin: 0 auto;" width="150" height="40" />
            <![endif]-->
          </div>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Welcome Message -->
    <mj-section background-color="#ffffff" padding="12px 24px 32px">
      <mj-column>
        <mj-text css-class="welcome-title" align="center">
          Your WebAbility 90-Day Milestones 🎉
        </mj-text>
        <mj-text align="center" font-size="18px" color="#6b7280" padding="16px 0 0">
          Hi {{name}}, congratulations! You've completed 90 days with WebAbility. Let's celebrate your accessibility achievements and look ahead to continued success.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Milestones Section -->
    <mj-section background-color="#ffffff" padding="0 24px 40px">
      <mj-column>
        <mj-text css-class="section-title" align="center" padding="0 0 24px">
          Your Accessibility Journey Highlights
        </mj-text>

        <!-- Day 0 to 30 -->
        <mj-text css-class="milestone-card">
          <div style="text-align: left;">
            <strong style="font-size: 18px; color: #1f2937;">🚀 Days 1-30: Foundation Built</strong><br><br>
            <span style="color: #374151; font-size: 16px;">
              ✅ Widget installed and active<br>
              ✅ Initial accessibility audit completed<br>
              ✅ Critical accessibility issues identified<br>
              ✅ Customization settings configured
            </span>
          </div>
        </mj-text>

        <!-- Day 30 to 60 -->
        <mj-text css-class="milestone-card">
          <div style="text-align: left;">
            <strong style="font-size: 18px; color: #1f2937;">📈 Days 31-60: Score Improvements</strong><br><br>
            <span style="color: #374151; font-size: 16px;">
              ✅ WCAG fundamentals mastered<br>
              ✅ Automated fixes reducing error count<br>
              ✅ Accessibility score trending upward<br>
              ✅ User engagement with widget features
            </span>
          </div>
        </mj-text>

        <!-- Day 60 to 90 -->
        <mj-text css-class="milestone-card">
          <div style="text-align: left;">
            <strong style="font-size: 18px; color: #1f2937;">🏆 Days 61-90: Upkeep Features</strong><br><br>
            <span style="color: #374151; font-size: 16px;">
              ✅ Automation features fully configured<br>
              ✅ Regular compliance reports scheduled<br>
              ✅ Continuous scanning maintaining quality<br>
              ✅ Legal risk protection established
            </span>
          </div>
        </mj-text>

        <mj-button 
          background-color="#3b82f6" 
          color="#ffffff"
          font-size="16px"
          padding="14px 32px"
          href="{{scannerLink}}"
        >
          📊 View Your Full Progress Report
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- Visual Divider -->
    <mj-section background-color="#ffffff" padding="0">
      <mj-column>
        <mj-divider border-color="#e5e7eb" border-width="1px" width="80%" padding="0"></mj-divider>
      </mj-column>
    </mj-section>

    <!-- Community & Support Section -->
    <mj-section background-color="#ffffff" padding="32px 24px 40px">
      <mj-column>
        <mj-text css-class="section-title" align="center" padding="0 0 24px">
          Join the Accessibility Community
        </mj-text>

        <!-- Continued Support -->
        <mj-text css-class="community-card">
          <div style="text-align: left;">
            <strong style="font-size: 18px; color: #1f2937;">🤝 Continued Support</strong><br><br>
            <span style="color: #374151; font-size: 16px;">
              Our support team remains available for questions, feature requests, and accessibility guidance. You're never alone in your accessibility journey.
            </span>
          </div>
        </mj-text>

        <!-- Community Channels -->
        <mj-text css-class="community-card">
          <div style="text-align: left;">
            <strong style="font-size: 18px; color: #1f2937;">💬 Community Resources</strong><br><br>
            <span style="color: #374151; font-size: 16px;">
              Connect with other accessibility champions, share best practices, and stay updated on the latest accessibility trends and regulations.
            </span>
          </div>
        </mj-text>

        <mj-button 
          background-color="#8b5cf6" 
          color="#ffffff"
          font-size="16px"
          padding="12px 24px"
          href="https://www.webability.io/blog"
        >
          🌐 View Latest Accessibility News & Updates 
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- Visual Divider -->
    <mj-section background-color="#ffffff" padding="0">
      <mj-column>
        <mj-divider border-color="#e5e7eb" border-width="1px" width="80%" padding="0"></mj-divider>
      </mj-column>
    </mj-section>

    <!-- Feedback Section -->
    <mj-section background-color="#ffffff" padding="32px 24px 40px">
      <mj-column>
        <mj-text css-class="section-title" align="center">
          💭 Your Feedback Shapes Our Future
        </mj-text>
        <mj-text align="center" font-size="16px" color="#6b7280" padding="0 0 20px">
          Help us continue improving WebAbility! Share your experience, suggest new features, or tell us how we can better serve the accessibility community.
        </mj-text>
        
        <mj-button 
          background-color="#10b981" 
          color="#ffffff"
          font-size="16px"
          padding="12px 24px"
          href="{{supportLink}}"
        >
          📝 Share Feedback
        </mj-button>
        <mj-text align="center" font-size="14px" color="#9ca3af" padding="16px 0 0">
          Consider becoming a WebAbility advocate and help us spread accessibility awareness!
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#f9fafb" padding="32px 24px">
      <mj-column>
        <mj-text css-class="footer-text" align="center">
          <strong>WebAbility</strong><br>
          Making the web accessible for everyone
        </mj-text>
        <mj-text css-class="footer-text" align="center" padding="16px 0 0">
          © {{year}} WebAbility. All rights reserved.
        </mj-text>
        <mj-text css-class="footer-text" align="center" font-size="12px" padding="16px 0 0">
          Thank you for 90 amazing days of building a more accessible web together! 🌟
        </mj-text>
        <mj-text css-class="footer-text" align="center" font-size="12px" padding="16px 0 0">
          <a href="{{unsubscribeLink}}" style="color: #6b7280; text-decoration: underline;">Unsubscribe from these emails</a>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
