<mjml>
  <mj-head>
    <mj-font name="Inter" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" />
    <mj-font name="Poppins" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" />
    <mj-preview>New Meeting Request - {{fullName}}</mj-preview>
    <mj-attributes>
      <mj-all font-family="Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif" />
      <mj-text font-size="16px" line-height="1.6" color="#374151" />
      <mj-button font-weight="600" border-radius="8px" />
    </mj-attributes>
    <mj-style>
      .title-text { 
        font-size: 36px !important; 
        font-weight: 800 !important; 
        color: #ffffff !important; 
        line-height: 1.2 !important; 
      }
      .subtitle-text { 
        font-size: 18px !important; 
        color: rgba(255,255,255,0.95) !important; 
        line-height: 1.6 !important; 
      }
      .field-label { 
        font-size: 14px !important; 
        font-weight: 700 !important; 
        color: #0ea5e9 !important; 
        text-transform: uppercase !important; 
        letter-spacing: 0.5px !important; 
        margin-bottom: 8px !important; 
      }
      .field-value { 
        font-size: 16px !important; 
        color: #1f2937 !important; 
        line-height: 1.7 !important; 
      }
      .field-card { 
        background: #f9fafb !important; 
        border-left: 4px solid #0ea5e9 !important; 
        border-radius: 8px !important; 
        padding: 20px !important; 
        margin-bottom: 16px !important; 
      }
      .badge { 
        display: inline-block !important; 
        padding: 8px 16px !important; 
        background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%) !important; 
        color: #ffffff !important; 
        border-radius: 24px !important; 
        font-size: 14px !important; 
        font-weight: 700 !important; 
        text-transform: uppercase !important; 
        letter-spacing: 0.5px !important; 
      }
      .contact-card { 
        background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%) !important; 
        border-radius: 12px !important; 
        padding: 24px !important; 
        margin: 20px 0 !important; 
      }
      .contact-btn { 
        display: inline-block !important; 
        padding: 12px 24px !important; 
        background: #0ea5e9 !important; 
        color: white !important; 
        text-decoration: none !important; 
        border-radius: 8px !important; 
        font-weight: 600 !important; 
        margin: 8px 8px 0 0 !important; 
      }
      .footer-text { 
        font-size: 14px !important; 
        color: #6b7280 !important; 
      }
    </mj-style>
  </mj-head>
  
  <mj-body background-color="#f3f4f6">
    <!-- Header with Gradient -->
    <mj-section background-color="#0ea5e9" padding="48px 24px">
      <mj-column>
        <!-- Title -->
        <mj-text css-class="title-text" align="center">
           New Meeting Request
        </mj-text>
        
        <!-- Subtitle -->
        <mj-text css-class="subtitle-text" align="center" padding="16px 20px 0">
          A new meeting booking request has been submitted
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Main Content -->
    <mj-section background-color="#ffffff" padding="40px 24px">
      <mj-column>
        <!-- Status Badge -->
        <mj-text align="center" padding="0 0 32px">
          <span class="badge">ğŸ“Š PENDING CONFIRMATION</span>
        </mj-text>

        <!-- Contact Information -->
        <mj-text css-class="field-card">
          <div class="field-label">ğŸ‘¤ Full Name</div>
          <div class="field-value">{{fullName}}</div>
        </mj-text>

        <mj-text css-class="field-card">
          <div class="field-label">ğŸ“§ Email Address</div>
          <div class="field-value">
            <a href="mailto:{{email}}" style="color: #0ea5e9; text-decoration: none; font-weight: 600;">{{email}}</a>
          </div>
        </mj-text>

        <mj-text css-class="field-card">
          <div class="field-label">ğŸ“± Phone Number</div>
          <div class="field-value">
            <a href="tel:{{countryCode}}{{phoneNumber}}" style="color: #0ea5e9; text-decoration: none; font-weight: 600;">
              {{countryCode}} {{phoneNumber}}
            </a>
          </div>
        </mj-text>

        <!-- Service Requested -->
        <mj-text css-class="field-card">
          <div class="field-label">ğŸ› ï¸ Requested Service</div>
          <div class="field-value">{{requestedService}}</div>
        </mj-text>

        <!-- Message -->
        <mj-text css-class="field-card">
          <div class="field-label">ğŸ’¬ Message</div>
          <div class="field-value">{{message}}</div>
        </mj-text>

        <!-- User Information -->
        <mj-text css-class="field-card">
          <div class="field-label">ğŸ‘¤ User Information</div>
          <div class="field-value">
            <strong>User ID:</strong> {{userId}}<br>
            <strong>Request Date:</strong> {{requestDate}}
          </div>
        </mj-text>

        <!-- Quick Contact Card -->
        <mj-text css-class="contact-card">
          <div style="text-align: center; color: #0c4a6e;">
            <strong style="font-size: 18px; display: block; margin-bottom: 16px;">ğŸ“ Quick Contact Options</strong>
            <div style="margin-top: 12px;">
              <a href="mailto:{{email}}" class="contact-btn">âœ‰ï¸ Send Email</a>
              <a href="tel:{{countryCode}}{{phoneNumber}}" class="contact-btn">ğŸ“ Call Now</a>
            </div>
          </div>
        </mj-text>

        <!-- CTA Button -->
        <mj-button 
          background-color="#0ea5e9" 
          color="#ffffff"
          font-size="16px"
          padding="16px 40px"
          href="{{dashboardLink}}"
        >
          View in Dashboard â†’
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- Tips Section -->
    <mj-section background-color="#f9fafb" padding="32px 24px">
      <mj-column>
        <mj-text font-size="18px" font-weight="700" color="#1f2937" align="center" padding="0 0 16px">
          ğŸ’¡ Next Steps
        </mj-text>
        <mj-text font-size="15px" color="#4b5563" line-height="1.8">
          â€¢ Review the client's requested service and message<br>
          â€¢ Contact them within 24 hours to schedule the meeting<br>
          â€¢ Prepare relevant materials for the consultation<br>
          â€¢ Send calendar invitation with meeting details
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#ffffff" padding="32px 24px">
      <mj-column>
        <mj-text css-class="footer-text" align="center">
          <strong>WebAbility - Accessibility Expertise</strong><br>
          Making the web accessible for everyone
        </mj-text>
        <mj-text css-class="footer-text" align="center" padding="16px 0 0">
          This is an automated notification from the WebAbility Service Requests system.<br>
          Â© {{year}} WebAbility. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>

